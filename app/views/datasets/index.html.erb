<div class="row">
    <div class="col-md-8">
        <% if @datasets.any? %>
            <h3>Datasets (<%= @datasets.count %>)</h3>
            <ol class="datasets">
                <%= render @datasets %>
            </ol>
        <% else %>
            <h3> No Datasets Available </h3>
        <% end %>
        <hr/>
    </div>
    <div class="col-md-3 col-md-offset-3" style="margin-top: 25px">
        <%= button_to "Create new datset", "/datasets/new", :class => "btn btn-primary", :method => :get %>
    </div>
</div>
